<div class="navbar navbar-default navbar-static-top">
      <div class="container">
       <%= link_to "Finance Tracker", root_path, class: "navbar-brand" %>
        <% if current_user %>
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
            <span class="icon-bars"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav col-md-6">
              <li><%= link_to "My portfolio", my_portfolio_path  %></li>
              <li><%= link_to "My profile", edit_user_registration_path  %></li>
              <li><%= link_to "My friends", my_friends_path  %></li>
            </ul>
            <ul class="nav navbar-right col-md-4">
              <li class="col-md-8 user-name text-right">
                <i class="fa fa-user"></i>
                <% if current_user.full_name != 'Anonymous' %>
                  <%= current_user.full_name %>
                <% else %>
                  <%= current_user.email %>
                <% end %>
              </li>
              <li class="col-md-4 logout">
                <%= link_to "sign out", destroy_user_session_path, class: "btn btn-xs btn-danger", method: :delete %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
</div>